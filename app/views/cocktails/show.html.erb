<div class="cocktail-banner" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <div class="cocktail-box">
    <% @cocktail.doses.each do |dose| %>
    <div class="details-box">
      <div class="items-first">
        <%= dose.ingredient.name %>
      </div>
      <div class="items-middle">
        <%= dose.description %>
      </div>
      <div class="items-last">
        <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="new-ingredient">
    <%= render '/doses/form' %>
  </div>
</div>
